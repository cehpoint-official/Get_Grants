rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin based on email
    function isAdmin() {
      return request.auth != null && 
        request.auth.token.email in ['admin@getgrants.in', 'kamini9926@gmail.com'];
    }

    match /posts/{postId} {
      allow get: if resource.data.status == 'published';
      allow list: if true;
      allow create: if request.auth != null && request.resource.data.status == 'pending';
      allow update, delete: if isAdmin();
    }

    match /grants/{grantId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /contactMessages/{messageId} {
      allow create: if request.auth != null;
      allow read, write: if isAdmin();
    }

    match /incubator_requests/{docId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }

    // --- NEW RULE ADDED HERE ---
    match /grantLeads/{leadId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read, update, delete: if isAdmin();
    }

    match /premiumInquiries/{inquiryId} {
      allow create: if true;
      allow read, update: if isAdmin();
      match /messages/{messageId} {
        allow create: if request.auth != null && (
          isAdmin() ||
          get(/databases/$(database)/documents/premiumInquiries/$(inquiryId)).data.userId == request.auth.uid
        );
        allow read: if request.auth != null && (
          isAdmin() ||
          get(/databases/$(database)/documents/premiumInquiries/$(inquiryId)).data.userId == request.auth.uid
        );
      }
    }

    // Applications collection
    match /applications/{applicationId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }

    // Admin dashboard stats collection
    match /adminStats/{docId} {
      allow read, write: if isAdmin();
    }

    // Source websites collection
    match /sourceWebsites/{docId} {
      allow read, write: if isAdmin();
    }

    // Pending grants collection
    match /pendingGrants/{docId} {
      allow read, write: if isAdmin();
    }

    // Events collection
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Payments collection
    match /payments/{paymentId} {
      allow read, write: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}