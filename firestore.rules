rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ✅ Public can read blog posts
    match /posts/{postId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // ✅ Authenticated users can create incubator requests
    match /incubator_requests/{docId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // ✅ Users collection for incubator signups
    match /users/{userId} {
      // Allow the user to read/write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow admins to manage any user
      allow read, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // ❌ Fallback deny after 14 Aug 2025
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 8, 14);
    }
  }
}
