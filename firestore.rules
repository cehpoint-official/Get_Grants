rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.admin == true ||
        request.auth.token.email in ['kamini9926@gmail.com'] ||
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin'
      );
    }

    match /posts/{postId} {
      allow get: if resource.data.status == 'published';
      allow list: if true;
      allow create: if request.auth != null && request.resource.data.status == 'pending';
      allow update, delete: if isAdmin();
    }

    match /grants/{grantId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /contactMessages/{messageId} {
      allow create: if request.auth != null;
      allow read, write: if isAdmin();
    }

    match /incubator_requests/{docId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }

    // --- NEW RULE ADDED HERE ---
    match /grantLeads/{leadId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // User lead details collected from grant popup (anonymous or logged-in users)
    match /userLeads/{uid} {
      // Create or update only own record
      allow create, update: if request.auth != null && request.auth.uid == uid;
      // Allow the user to read their own record
      allow read: if request.auth != null && request.auth.uid == uid;
      // Admins can read everything
      allow read, update, delete: if isAdmin();
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read, update, delete: if isAdmin();
    }

    match /premiumInquiries/{inquiryId} {
      allow create: if true;
      allow read, update: if isAdmin();
      match /messages/{messageId} {
        allow create: if request.auth != null && (
          isAdmin() ||
          get(/databases/$(database)/documents/premiumInquiries/$(inquiryId)).data.userId == request.auth.uid
        );
        allow read: if request.auth != null && (
          isAdmin() ||
          get(/databases/$(database)/documents/premiumInquiries/$(inquiryId)).data.userId == request.auth.uid
        );
      }
    }

    // Admin-only collections used by dashboard
    match /pendingGrants/{docId} {
      allow read, create, update, delete: if isAdmin();
    }

    match /sourceWebsites/{docId} {
      allow read, create, update, delete: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}