rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Blog posts: Public can read only published; users can create pending; only admin can publish/reject/delete
    match /posts/{postId} {
      allow get: if resource.data.status == 'published';
      allow list: if true; // listing is allowed, but client should filter to published via queries
      allow create: if request.auth != null && request.resource.data.status == 'pending';
      allow update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // ✅ NAYA RULE: Grants collection ke liye
    // Isse koi bhi user grants dekh sakta hai, par badal sirf admin sakta hai.
    match /grants/{grantId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // ✅ Authenticated users can create incubator requests
    match /incubator_requests/{docId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // ✅ Users collection for incubator signups
    match /users/{userId} {
      // Allow the user to read/write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow admins to manage any user
      allow read, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Fallback deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}